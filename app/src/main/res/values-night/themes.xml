<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark application theme -->
    <style name="Theme.DiveLog.DayNight">

        <item name="isLightTheme">false</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/purple_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:colorBackground">@color/purple_dark</item>
        <item name="colorOnBackground">@color/white</item>

        <!-- System windows -->
        <item name="android:statusBarColor">@color/purple_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <!-- Dark splash theme -->
    <style name="Theme.DiveLog.Splash.DayNight">
        <item name="android:colorBackground">@color/purple_dark</item>
        <item name="colorOnBackground">@color/white</item>
    </style>
</resources>
