<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with default values shared by both light and dark theme. -->
    <style name="Theme.DiveLog" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="isLightTheme">true</item>

        <!-- Colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <!-- System windows -->
        <item name="android:statusBarColor">?colorOnBackground</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">?colorOnBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DiveLog.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DiveLog.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DiveLog.LargeComponent</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.DiveLog.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.DiveLog.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.DiveLog.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.DiveLog.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.DiveLog.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.DiveLog.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.DiveLog.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.DiveLog.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.DiveLog.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.DiveLog.Body2</item>
        <item name="textAppearanceCaption">@style/TextAppearance.DiveLog.Caption</item>
        <item name="textAppearanceButton">@style/TextAppearance.DiveLog.Button</item>
        <item name="textAppearanceOverline">@style/TextAppearance.DiveLog.Overline</item>
    </style>

    <!-- Base splash theme with default values shared by both light and dark theme -->
    <style name="Theme.DiveLog.Splash" parent="Theme.SplashScreen">
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/img_splash_animated</item>
        <item name="postSplashScreenTheme">@style/Theme.DiveLog.DayNight</item>
    </style>

    <!-- Light application theme -->
    <style name="Theme.DiveLog.DayNight" />

    <!-- Light splash theme -->
    <style name="Theme.DiveLog.Splash.DayNight" />

</resources>
